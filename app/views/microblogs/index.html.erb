<p id="notice"><%= notice %></p>

<h1>Microblogs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Blog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microblogs.each do |microblog| %>
      <tr>
        <td><%= microblog.user %></td>
        <td><%= microblog.blog %></td>
        <td><%= link_to 'Show', microblog %></td>
        <td><%= link_to 'Edit', edit_microblog_path(microblog) %></td>
        <td><%= link_to 'Destroy', microblog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Microblog', new_microblog_path %>
